#!/bin/sh

# Prints the current volume or ó°¸ˆ if muted.
vol="$(wpctl get-volume @DEFAULT_AUDIO_SINK@)"

# If muted, print ó°¸ˆ and exit.
[ "$vol" != "${vol%\[MUTED\]}" ] && echo ó°¸ˆ && exit

vol="${vol#Volume: }"

split() {
	# For ommiting the . without calling and external program.
	IFS=$2
	set -- $1
	printf '%s' "$@"
}

vol="$(printf "%.0f" "$(split "$vol" ".")")"

case 1 in
	$((vol >= 70)) ) icon="ï€¨ " ;;
	$((vol >= 30)) ) icon="ó°•¾ " ;;
	$((vol >= 1)) ) icon="ï€§ " ;;
	$((vol == 0)) ) icon="ó°¸ˆ " ;;
	* ) echo ðŸ”‡ && exit ;;
esac

echo "$icon$vol%"